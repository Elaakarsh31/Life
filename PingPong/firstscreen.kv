#:import utils kivy.utils
<FirstScreen>
    FloatLayout:
        id: float
        canvas.before:
            Color:
                rgba: (0, 0, 0, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        MDRoundFlatButton:
            id: btn-1
            text: "Patient"
            line_color: 1,1,1,1
            line_width: 1.4
            text_color: 1,1,1,1
            md_bg_color: 0,0,0,1
            font_name: "C:\\Users\\aakar\\Desktop\\VSCODE\\BarlowCondensed-Italic"
            font_size: "20sp"
            pos_hint: {'center_x': 0.5, 'center_y':0.7}
            size_hint: 0.3, 0.2
            on_release: app.change_screen('login', 'forward')

        MDRoundFlatButton:
            id: btn2
            text: "Others"
            font_name: "C:\\Users\\aakar\\Desktop\\VSCODE\\BarlowCondensed-Italic"
            font_size: "20sp"
            line_color: 1,1,1,1
            line_width: 1.4
            text_color: 1,1,1,1
            md_bg_color: 0,0,0,1
            pos_hint: {'center_x': 0.5, 'center_y':0.3}
            size_hint: 0.3, 0.2
            #on_press:  app.change_color('btn2', 0.3)
            on_release: app.change_screen('others', 'forward')
