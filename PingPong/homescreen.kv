        MDBottomAppBar:
            md_bg_color: utils.get_color_from_hex('#f2aa4cff')
            MDToolbar:
                icon: "magnify"
                icon_color: utils.get_color_from_hex('#f2aa4cff')
                md_bg_color:
                on_action_button: app.change_screen('search', 'forward')
                type: "bottom"
